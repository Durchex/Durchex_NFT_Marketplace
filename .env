# Deployment Environment Variables
# Copy this file to .env and fill in your values

# Private Key for Contract Deployment (REQUIRED)
# This should be the private key of the account that will deploy contracts
# NEVER commit this to version control - keep it secure!
# Get this from MetaMask: Account Details > Export Private Key
PRIVATE_KEY=0e319322b33d671f36543b7719d171602c815d56fa830a53f5b940481ad08d9e

# Frontend Environment Variables (VITE_ prefix for client-side access)
# API Base URL - Change to localhost for development, production URL for live
VITE_API_BASE_URL=http://localhost:3000/api/v1

# Socket URL for real-time features
VITE_SOCKET_URL=http://localhost:3000
# Contract addresses - Update these with your deployed contract addresses
VITE_APP_NFTMARKETPLACE_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
VITE_APP_VENDORNFT_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Pinata API Keys for IPFS uploads
VITE_PINATA_API_KEY=your_pinata_api_key
VITE_PINATA_SECRET_KEY=your_pinata_secret_key

# RPC URLs for different networks
ETHEREUM_RPC_URL=https://rpc.ankr.com/eth
POLYGON_RPC_URL=https://rpc.ankr.com/polygon
