{
  "name": "durchex-nft-mobile",
  "version": "1.0.0",
  "description": "Durchex NFT Marketplace Mobile App (React Native)",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "test": "jest",
    "lint": "eslint .",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "build": "eas build",
    "submit": "eas submit",
    "prebuild": "expo prebuild"
  },
  "dependencies": {
    "expo": "~50.0.0",
    "expo-status-bar": "~1.12.0",
    "react": "18.2.0",
    "react-native": "0.73.6",
    "@react-navigation/native": "^6.1.8",
    "@react-navigation/bottom-tabs": "^6.5.10",
    "@react-navigation/native-stack": "^6.9.12",
    "@react-navigation/drawer": "^6.6.6",
    "react-native-screens": "~3.29.0",
    "react-native-safe-area-context": "4.8.2",
    "react-native-gesture-handler": "~2.14.0",
    "react-native-reanimated": "~3.6.0",
    "react-native-paper": "^5.11.4",
    "react-native-vector-icons": "^10.0.0",
    "@expo/vector-icons": "^14.0.0",
    "expo-av": "~14.0.0",
    "expo-camera": "~15.0.0",
    "expo-image-picker": "~15.0.1",
    "expo-barcode-scanner": "~13.0.0",
    "expo-haptics": "~13.0.0",
    "@walletconnect/modal-react-native": "^2.1.0",
    "@walletconnect/core": "^2.12.0",
    "@walletconnect/sign-client": "^2.12.0",
    "ethers": "^6.10.0",
    "@ethersproject/contracts": "^5.7.0",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/address": "^5.7.0",
    "@react-native-async-storage/async-storage": "1.23.1",
    "axios": "^1.7.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "date-fns": "^2.30.0",
    "formik": "^2.4.5",
    "yup": "^1.3.3",
    "lottie-react-native": "^6.4.1",
    "@react-native-camera-roll/camera-roll": "^7.7.1",
    "share-menu-react-native": "^3.1.1",
    "react-native-biometric": "^2.0.0",
    "react-native-keychain": "^8.1.2",
    "socket.io-client": "^4.7.2",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@types/react": "~18.2.45",
    "@types/react-native": "~0.73.0",
    "jest": "^29.7.0",
    "@testing-library/react-native": "^12.4.0",
    "eslint": "^8.55.0",
    "eslint-config-expo": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "babel-plugin-module-resolver": "^5.0.0"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "eslintConfig": {
    "extends": "expo",
    "rules": {
      "react-hooks/exhaustive-deps": "warn",
      "no-console": "warn"
    }
  },
  "expo": {
    "name": "Durchex NFT Marketplace",
    "slug": "durchex-nft",
    "version": "1.0.0",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTabletMode": true,
      "usesNonExemptEncryption": false,
      "bundleIdentifier": "com.durchex.nft.mobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.durchex.nft.mobile",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "INTERNET"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "@react-native-camera-roll/camera-roll",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Durchex to access your camera."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Durchex to access your photos."
        }
      ],
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Allow Durchex to access your camera for QR codes."
        }
      ]
    ],
    "scheme": "durchex"
  }
}
