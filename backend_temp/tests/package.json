{
  "name": "durchex-nft-tests",
  "version": "1.0.0",
  "description": "Comprehensive automated test suite for Durchex NFT Marketplace",
  "type": "module",
  "main": "run-tests.js",
  "scripts": {
    "setup-db": "node setup-db.js",
    "setup-db:clear": "CLEAR_DB=true node setup-db.js",
    "test:all": "node run-tests.js",
    "test:core": "jest core-features.test.js --verbose",
    "test:giveaway": "jest giveaway-payment.test.js --verbose",
    "test:admin": "jest admin-security.test.js --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:smoke": "jest --testNamePattern='(UT001|NT001|CT001)'",
    "test:nft-creation": "jest nft-creation-collection.test.js --verbose",
    "report": "cat ../reports/test-report-latest.txt",
    "reports:list": "ls -la ../reports/",
    "clean": "rm -rf ../reports/* node_modules/.cache"
  },
  "keywords": [
    "nft",
    "marketplace",
    "testing",
    "automated",
    "durchex"
  ],
  "author": "Durchex Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.5",
    "dotenv": "^16.3.1",
    "mongoose": "^8.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "collectCoverageFrom": [
      "setup.test.js",
      "core-features.test.js",
      "giveaway-payment.test.js",
      "admin-security.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Durchex/Durchex_NFT_Marketplace.git"
  },
  "bugs": {
    "url": "https://github.com/Durchex/Durchex_NFT_Marketplace/issues"
  }
}
